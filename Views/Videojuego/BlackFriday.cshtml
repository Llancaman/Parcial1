@model Parcial1.ViewModels.VideojuegoBlackFridayViewModel;

@{
    ViewData["Title"] = "Precio";
}

<h1>Aplicar descuento Black Friday</h1>

<h4>Videojuego</h4>
<hr />
<p>@Model.Nombre</p>
<div>
    <p>Precio actual: @Model.Precio</p>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="BlackFriday" method="post">
            <div class="form-group">
                <label asp-for="Porcentaje" class="control-label"></label>
                <input asp-for="Porcentaje" class="form-control" />
                <span asp-validation-for="Porcentaje" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input type="submit" value="Aplicar descuento" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>